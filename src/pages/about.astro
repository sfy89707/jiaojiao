---
import SiteLayout from '../layouts/SiteLayout.astro';
import { SITE_AUTHOR, SITE_BIO, SITE_DESCRIPTION, SITE_EMAIL, SITE_GITHUB, SITE_TITLE } from '../consts';

const BASE = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<SiteLayout title={`${SITE_TITLE} · 关于`} description={SITE_DESCRIPTION}>
	<section class="about">
		<div class="top">
			<img class="avatar" src={`${BASE}images/jiaojiao-cutout.png`} alt="叫叫（金渐层）" loading="eager" />
			<div>
				<h1>关于 {SITE_AUTHOR}</h1>
				<p class="bio">{SITE_BIO}。我喜欢睡觉，也经常在太舒服的时候流口水。</p>
				<div class="links">
					<a class="btn" href={SITE_GITHUB} target="_blank" rel="noreferrer">GitHub</a>
					<a class="btn" href={`mailto:${SITE_EMAIL}`}>邮箱</a>
				</div>
			</div>
		</div>

		<section class="card">
			<h2>这里会写什么？</h2>
			<ul>
				<li><b>猫咪日常</b>：睡觉、晒太阳、发呆、偶尔灵感。</li>
				<li><b>建站记录</b>：叫叫站怎么搭、怎么维护、怎么变好看。</li>
				<li><b>轻量思考</b>：把复杂事讲清楚，把生活过得更松弛。</li>
			</ul>
		</section>

		<section class="card">
			<h2>我的三条原则</h2>
			<ol>
				<li>困了就睡（先恢复电量再做事）。</li>
				<li>允许不完美（先发布，再优化）。</li>
				<li>慢慢来（可持续比短跑更重要）。</li>
			</ol>
		</section>

		<section class="card">
			<h2>如果你想联系我</h2>
			<p>
				欢迎给我写邮件：<a href={`mailto:${SITE_EMAIL}`}>{SITE_EMAIL}</a>
			</p>
			<p class="hint">（注：我可能在睡觉，回复会慢一点。）</p>
		</section>
	</section>

	<style>
		.about { display: grid; gap: 1rem; }
		.top {
			display: grid;
			grid-template-columns: 160px 1fr;
			gap: 1.2rem;
			align-items: center;
			background: #fff;
			border-radius: 16px;
			box-shadow: var(--box-shadow);
			padding: 1.2rem;
		}
		@media (max-width: 720px) {
			.top { grid-template-columns: 1fr; text-align: center; }
			.links { justify-content: center; }
		}
		.avatar {
			width: 160px;
			height: 160px;
			border-radius: 18px;
			object-fit: cover;
			box-shadow: 0 18px 50px rgba(0,0,0,.16);
		}
		h1 { margin: 0 0 .4rem; }
		.bio { color: rgb(var(--gray)); margin: 0; }
		.links { display: flex; gap: .6rem; flex-wrap: wrap; margin-top: .8rem; }
		.btn {
			text-decoration: none;
			background: rgba(14,165,233,.10);
			color: var(--accent-dark);
			padding: .45rem .75rem;
			border-radius: 999px;
			font-weight: 800;
		}
		.card {
			background: #fff;
			border-radius: 16px;
			box-shadow: var(--box-shadow);
			padding: 1.2rem;
		}
		.card h2 { margin-top: 0; }
		.card ul, .card ol { margin: .6rem 0 0; padding-left: 1.1rem; }
		.hint { color: rgb(var(--gray)); font-size: .92rem; }
	</style>
</SiteLayout>
