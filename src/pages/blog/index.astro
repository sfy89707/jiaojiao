---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const BASE = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main { width: min(1100px, 92vw); }
			ul { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.2rem; list-style: none; padding: 0; }
			li { background: #fff; border-radius: 14px; overflow: hidden; box-shadow: 0 6px 20px rgba(0,0,0,.06); }
			li a { display: block; padding: .6rem .8rem 1rem; text-decoration: none; }
			img { border-radius: 10px; }
			.title { margin: .5rem 0 .3rem; color: rgb(var(--black)); }
			.date { margin: 0; color: rgb(var(--gray)); font-size: .92rem; }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>文章</h1>
			<ul>
				{posts.map((post) => (
					<li>
						<a href={`${BASE}blog/${post.id}/`}>
							{post.data.heroImage && <Image width={720} height={360} src={post.data.heroImage} alt="" />}
							<h4 class="title">{post.data.title}</h4>
							<p class="date"><FormattedDate date={post.data.pubDate} /></p>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>
